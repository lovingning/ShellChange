<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/view_padding_margin_16dp"
    android:paddingTop="@dimen/view_padding_margin_10dp"
    android:paddingEnd="@dimen/view_padding_margin_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_picture"
            android:layout_width="@dimen/view_padding_margin_115dp"
            android:layout_height="@dimen/view_height_70dp"
            tools:src="@drawable/picture_more_test_0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/view_padding_margin_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="金色财经 | 区块链进入真实房地产带来哪些生活改变？"
                android:textColor="@color/skin_body1_color"
                android:textSize="@dimen/text_size_normal_14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_14dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_item_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阅读628"
                    android:textColor="@color/skin_display2_color_999999"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_setup_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_padding_margin_11dp"
                    android:background="@drawable/shape_icon_bg_item_page_more"
                    android:paddingStart="@dimen/view_padding_margin_7dp"
                    android:paddingTop="@dimen/view_padding_margin_3dp"
                    android:paddingEnd="@dimen/view_padding_margin_7dp"
                    android:text="置顶"
                    android:textColor="@color/skin_display4_color_FFD31A1A"
                    android:textSize="@dimen/text_size_smallest_11sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_item_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_divider_line_width_1px"
        android:layout_marginTop="@dimen/view_padding_margin_16dp"
        android:src="@color/skin_divider_color" />
</LinearLayout>