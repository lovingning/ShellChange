<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/view_padding_margin_7dp"
    android:layout_marginEnd="@dimen/view_padding_margin_7dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/skin_scaffold_background_color"
    app:cardCornerRadius="@dimen/drawable_shape_normal_radius_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/view_padding_margin_20dp"
        android:paddingEnd="@dimen/view_padding_margin_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding_margin_20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="更换手机号"
                android:textColor="@color/skin_title_color"
                android:textSize="@dimen/text_size_16sp" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/view_padding_margin_8dp"
                android:src="@drawable/icon_setting_module_close" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_phone_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding_margin_4dp"
            android:background="@drawable/layer_bg_edit_bottom_line"
            android:hint="输入当前手机号"
            android:paddingTop="@dimen/view_padding_margin_24dp"
            android:paddingBottom="@dimen/view_padding_margin_11dp"
            android:textSize="@dimen/text_size_normal_14sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layer_bg_edit_bottom_line"
            android:hint="输入密码"
            android:paddingTop="@dimen/view_padding_margin_24dp"
            android:paddingBottom="@dimen/view_padding_margin_11dp"
            android:textSize="@dimen/text_size_normal_14sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_phone_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layer_bg_edit_bottom_line"
            android:hint="输入新手机号"
            android:paddingTop="@dimen/view_padding_margin_24dp"
            android:paddingBottom="@dimen/view_padding_margin_11dp"
            android:textSize="@dimen/text_size_normal_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layer_bg_edit_bottom_line">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_sms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="输入短信验证码"
                android:paddingTop="@dimen/view_padding_margin_24dp"
                android:paddingBottom="@dimen/view_padding_margin_11dp"
                android:textSize="@dimen/text_size_normal_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_16dp"
                android:background="@color/transparent"
                android:paddingTop="@dimen/view_padding_margin_24dp"
                android:paddingBottom="@dimen/view_padding_margin_11dp"
                android:text="获取验证码"
                android:textColor="@color/skin_title_color"
                android:textSize="@dimen/text_size_normal_14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/view_padding_margin_30dp"
            android:layout_marginBottom="@dimen/view_padding_margin_26dp"
            android:enabled="false"
            android:src="@drawable/selector_setting_module_enter_normal" />
    </LinearLayout>
</androidx.cardview.widget.CardView>