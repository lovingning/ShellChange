<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/skin_scaffold_background_color"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:paddingTop="@dimen/view_padding_margin_32dp"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingBottom="@dimen/view_padding_margin_10dp"
        android:scaleType="fitStart"
        android:src="@drawable/logo_information_title_text" />

    <!--顶部导航-->
    <!--app:tabIndicatorFullWidth="false"-->
    <!--app:tabIndicator=""-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_36dp"
        android:background="@color/skin_scaffold_background_color"
        android:fitsSystemWindows="true"
        android:paddingBottom="@dimen/view_padding_margin_4dp"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/skin_indicator_select_color"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorGravity="bottom"
        app:tabMode="scrollable"
        app:tabPaddingEnd="@dimen/view_padding_margin_16dp"
        app:tabBackground="@drawable/bg_ripple_borderless_tab_layout"
        app:tabRippleColor="@color/transparent"
        app:tabPaddingStart="@dimen/view_padding_margin_16dp"
        app:tabSelectedTextColor="@color/skin_indicator_select_color"
        app:tabTextAppearance="@style/Custom.TabLayout.TextAppearance"
        app:tabTextColor="@color/skin_indicator_normal_color" />

    <!--中间内容-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/skin_scaffold_deep_background_color">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</LinearLayout>