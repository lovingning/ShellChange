<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_padding_margin_7dp"
        android:layout_marginEnd="@dimen/view_padding_margin_7dp"
        app:cardBackgroundColor="@color/skin_scaffold_background_color"
        app:cardCornerRadius="@dimen/drawable_shape_normal_radius_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_take_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_40dp"
                android:background="@drawable/layer_bg_trans_bottom_divider"
                android:drawableEnd="@drawable/ic_photo_camera_24dp"
                android:drawablePadding="@dimen/view_padding_margin_16dp"
                android:gravity="center_vertical|start"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                android:text="拍照"
                android:textColor="@color/skin_title_color"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/tv_select_picture"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_40dp"
                android:background="@drawable/layer_bg_trans_bottom_divider"
                android:drawableEnd="@drawable/ic_photo_size_select_actual_24dp"
                android:drawablePadding="@dimen/view_padding_margin_16dp"
                android:gravity="center_vertical|start"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                android:text="照片图库"
                android:textColor="@color/skin_title_color"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/tv_browsing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_40dp"
                android:background="@drawable/layer_bg_trans_bottom_divider"
                android:drawableEnd="@drawable/ic_more_horiz_24dp"
                android:drawablePadding="@dimen/view_padding_margin_16dp"
                android:gravity="center_vertical|start"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                android:text="浏览"
                android:textColor="@color/skin_title_color"
                android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_padding_margin_7dp"
        android:layout_marginTop="@dimen/view_padding_margin_10dp"
        android:layout_marginEnd="@dimen/view_padding_margin_7dp"
        android:layout_marginBottom="@dimen/view_padding_margin_16dp"
        app:cardBackgroundColor="@color/skin_scaffold_background_color"
        app:cardCornerRadius="@dimen/drawable_shape_normal_radius_10dp">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_40dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/skin_button_text_color"
            android:textSize="@dimen/text_size_16sp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>