<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin_scaffold_deep_background_color"
    android:orientation="vertical">

    <include layout="@layout/layout_tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/view_padding_margin_10dp"
        android:background="@color/skin_scaffold_background_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding_margin_52dp"
            android:gravity="center"
            android:paddingStart="@dimen/view_padding_margin_32dp"
            android:paddingEnd="@dimen/view_padding_margin_32dp"
            android:text="朴薪快讯"
            android:textColor="@color/skin_title_color"
            android:textSize="@dimen/text_size_24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding_margin_6dp"
            android:gravity="center"
            android:paddingStart="@dimen/view_padding_margin_48dp"
            android:paddingEnd="@dimen/view_padding_margin_48dp"
            android:text="区块行情  必备朴薪"
            android:textColor="@color/skin_display2_color_999999"
            android:textSize="@dimen/text_size_10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/view_padding_margin_54dp"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingStart="@dimen/view_padding_margin_32dp"
            android:paddingEnd="@dimen/view_padding_margin_32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="媒体合作：puxin@jinse.com"
                android:textColor="@color/skin_display2_color_999999"
                android:textSize="@dimen/text_size_normal_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_4dp"
                android:gravity="start"
                android:text="市场合作：puxinshichang@jinse.com"
                android:textColor="@color/skin_display2_color_999999"
                android:textSize="@dimen/text_size_normal_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_4dp"
                android:gravity="start"
                android:text="广告合作  微信：puxin"
                android:textColor="@color/skin_display2_color_999999"
                android:textSize="@dimen/text_size_normal_14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/view_padding_margin_16dp"
            android:layout_marginTop="@dimen/view_padding_margin_24dp"
            android:layout_marginEnd="@dimen/view_padding_margin_16dp"
            android:layout_marginBottom="@dimen/view_padding_margin_35dp"
            android:gravity="center"
            android:text="朴薪快讯 V1.0.0"
            android:textColor="@color/skin_display2_color_999999"
            android:textSize="@dimen/text_size_10sp" />
    </LinearLayout>
</LinearLayout>