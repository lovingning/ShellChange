<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/skin_scaffold_background_color"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_tool_bar_fit_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tl_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:contentInsetEnd="0dp"
        app:contentInsetEndWithActions="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/iv_common_tool_bar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/fab_margin_16dp"
                android:src="@drawable/icon_news_detail_back" />

            <TextView
                android:id="@+id/tv_common_tool_bar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/view_padding_margin_64dp"
                android:layout_marginEnd="@dimen/view_padding_margin_64dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/skin_title_color"
                android:textSize="@dimen/text_size_20sp"
                android:transitionName="@string/translation_title"
                tools:text="浏览历史" />
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_tool_bar_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_divider_line_width_1px"
        android:src="@color/skin_divider_color" />
</LinearLayout>