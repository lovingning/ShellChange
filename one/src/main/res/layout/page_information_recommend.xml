<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin_scaffold_background_color"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.knowledge.mnlin.shellchange.views.AutoHeightViewPager
                android:id="@+id/vp_recommend_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_recommend_banner_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="@dimen/view_padding_margin_12dp"
                android:src="@drawable/level_information_recommend_banner_dot" />
        </FrameLayout>

        <include
            android:id="@+id/in_main_0"
            layout="@layout/item_page_more" />

        <include
            android:id="@+id/in_main_1"
            layout="@layout/item_page_more" />

        <include
            android:id="@+id/in_main_2"
            layout="@layout/item_page_more" />

        <com.knowledge.mnlin.shellchange.views.FitSrcImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_padding_margin_16dp"
            android:layout_marginTop="@dimen/drawable_shape_normal_radius_10dp"
            android:layout_marginEnd="@dimen/view_padding_margin_16dp"
            android:layout_marginBottom="@dimen/drawable_shape_normal_radius_10dp"
            android:src="@drawable/picture_person_banner_default" />

        <include
            android:id="@+id/in_main_3"
            layout="@layout/item_page_more" />

        <include
            android:id="@+id/in_main_4"
            layout="@layout/item_page_more" />

        <include
            android:id="@+id/in_main_5"
            layout="@layout/item_page_more" />

        <include
            android:id="@+id/in_main_6"
            layout="@layout/item_page_more" />

        <include
            android:id="@+id/in_main_7"
            layout="@layout/item_page_more" />
    </LinearLayout>

</ScrollView>