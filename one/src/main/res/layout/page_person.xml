<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin_scaffold_background_color"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_padding_margin_60dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:paddingEnd="@dimen/view_padding_margin_16dp">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/view_height_60dp"
            android:layout_height="@dimen/view_height_60dp"
            android:src="@drawable/icon_person_default_head"
            android:transitionName="@string/translation_head" />

        <TextView
            android:id="@+id/tv_head_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_padding_margin_16dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="您好，181*******30"
            android:textColor="@color/skin_title_color"
            android:textSize="@dimen/text_size_large_18sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_browsing_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_padding_margin_32dp"
        android:drawableEnd="@drawable/icon_person_navigation"
        android:drawablePadding="@dimen/view_padding_margin_32dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:singleLine="true"
        android:text="浏览历史"
        android:textColor="@color/skin_title_color"
        android:textSize="@dimen/text_size_20sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_padding_margin_16dp"
        android:layout_marginTop="@dimen/view_padding_margin_14dp"
        android:layout_marginEnd="@dimen/view_padding_margin_16dp"
        android:paddingBottom="@dimen/view_padding_margin_20dp">

        <com.knowledge.mnlin.shellchange.views.FitSrcImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/picture_person_banner_default" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_padding_margin_10dp"
        android:background="@color/skin_scaffold_deep_background_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_padding_margin_24dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:singleLine="true"
        android:text="常用工具"
        android:textColor="@color/skin_title_color"
        android:textSize="@dimen/text_size_20sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_padding_margin_16dp"
        android:layout_marginTop="@dimen/view_padding_margin_20dp"
        android:layout_marginEnd="@dimen/view_padding_margin_16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:columnCount="4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_my_collect"
            android:layout_columnWeight="1"
            android:drawableTop="@drawable/icon_person_my_collect"
            android:drawablePadding="@dimen/view_padding_margin_12dp"
            android:gravity="center"
            android:text="我的收藏"
            android:textColor="@color/skin_title_color"
            android:textSize="@dimen/text_size_normal_14sp" />

        <TextView
            android:id="@+id/tv_settings"
            android:layout_columnWeight="1"
            android:drawableTop="@drawable/icon_person_settings"
            android:drawablePadding="@dimen/view_padding_margin_12dp"
            android:gravity="center"
            android:text="\u3000设置\u3000"
            android:textColor="@color/skin_title_color"
            android:textSize="@dimen/text_size_normal_14sp" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_columnWeight="1"
            android:drawableTop="@drawable/icon_person_feedback"
            android:drawablePadding="@dimen/view_padding_margin_12dp"
            android:gravity="center"
            android:text="意见反馈"
            android:textColor="@color/skin_title_color"
            android:textSize="@dimen/text_size_normal_14sp" />

        <TextView
            android:id="@+id/tv_about_us"
            android:layout_columnWeight="1"
            android:drawableTop="@drawable/icon_person_about_us"
            android:drawablePadding="@dimen/view_padding_margin_12dp"
            android:gravity="center"
            android:text="关于我们"
            android:textColor="@color/skin_title_color"
            android:textSize="@dimen/text_size_normal_14sp" />
    </GridLayout>
</LinearLayout>